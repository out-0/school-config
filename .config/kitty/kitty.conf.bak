# ── Window ─────────────────────────────
hide_window_decorations yes
remember_window_size    yes
background_opacity      0.8
background_blur         1

confirm_os_window_close 0
window_padding_width 5

# ── Cursor ─────────────────────────────
cursor_shape       block
# cursor             #cdd6f4
# cursor_text_color  #1e1e2e

# ── URL ───────────────"akinsho/bufferline.nvim",─────────────────
# url_color #89b4fa

# ── Borders ────────────────────────────
# active_border_color   #b4befe
# inactive_border_color #1e1e2e

# ── Tabs ───────────────────────────────
# active_tab_background   #b4befe
# active_tab_foreground   #45475a
# inactive_tab_background #1e1e2e
# inactive_tab_foreground #cdd6f4

# ── Colors ─────────────────────────────
enabled_layouts splits

# Split windows
map ctrl+h launch --location=hsplit
map ctrl+n launch --location=vsplit
map ctrl+shift+w close_window
map ctrl+shift+arrow focus_window in_direction


# Focus between splits (Vim style)
map ctrl+h neighboring_window left
map ctrl+j neighboring_window down
map ctrl+k neighboring_window up
map ctrl+l neighboring_window right



# Move windows
map ctrl+shift+m move_window

# Resize splits
map ctrl+shift+r resize_window

# Remove the padding.
window_padding_width 0

shell /usr/bin/zsh


# BEGIN_KITTY_FONTS
font_family      family="BigBlueTerm437 Nerd Font Mono"
font_size		 16.0
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS



allow_remote_control yes
listen_on unix:/tmp/mykitty
# This forces Kitty to handle emojis as double-width symbols
spacing 0




# BEGIN_KITTY_THEME
# Borland
include current-theme.conf
# END_KITTY_THEME
#

#KITTY_ENABLE_WAYLAND=1 kitty
